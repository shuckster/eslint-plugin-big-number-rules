{
  "plugins": ["big-number-rules"],
  "settings": {
    "big-number-rules": {
      "construct": "Decimal",
      "importDeclaration": "__IGNORE__",
      "supportsSum": true,
      "supportsBitwise": false,
      "supportsRound": true,
      "sum": "sum",
      "arithmetic": {
        "+": "plus",
        "-": "minus",
        "/": "dividedBy",
        "*": "times",
        "**": "pow",
        "%": "modulo"
      },
      "assignment": {
        "+=": "plus",
        "-=": "minus",
        "/=": "dividedBy",
        "*=": "times",
        "**=": "pow",
        "%=": "modulo"
      },
      "comparison": {
        "<": "lessThan",
        "<=": "lessThanOrEqualTo",
        "===": "equals",
        "==": "equals",
        "!==": ["__NEGATION__", "${L}", "equals", "${R}"],
        "!=": ["__NEGATION__", "${L}", "equals", "${R}"],
        ">=": "greaterThanOrEqualTo",
        ">": "greaterThan"
      },
      "math": {
        "min": "min",
        "max": "max",
        "random": "random",
        "abs": "absoluteValue",
        "sign": ["__CONSTRUCT__(${A}).comparedTo(0)"],
        "sqrt": "squareRoot"
      },
      "rounding": {
        "round": "round",
        "ceil": "ceil",
        "floor": "floor"
      },
      "number": {
        "parseFloat": ["__CONSTRUCT__(${A})"],
        "toExponential": "toExponential",
        "toFixed": "decimalPlaces",
        "toPrecision": "toPrecision",
        "toString": "toString"
      }
    }
  }
}
